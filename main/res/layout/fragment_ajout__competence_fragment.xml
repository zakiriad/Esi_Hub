<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CV_Details.Ajout_Competence_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:text="Ajouter Une Competence"
            android:textColor="#000"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="Nom de la compÃ©tence"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textSize="19dp"
            />
        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="30dp"
            android:id="@+id/Nom_Edittext_Ajout_competence"
            
            />
        <TextView
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="Niveau de maitrise"
            android:textColor="#000"
            android:gravity="center_vertical"
            android:textSize="19dp"
            />
        <Spinner
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:entries="@array/Niveau_competences"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:id="@+id/Niveau_Spinner_Ajout_competence"
            android:layout_marginBottom="50dp"
            />
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal">
            <Button
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_burders"
                android:backgroundTint="#C0C0C0"
                android:layout_marginRight="5dp"
                android:text="Annuler"
                android:id="@+id/Annuler_Button_Ajout_competence"
                />
            <Button
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_burders"
                android:layout_marginLeft="5dp"
                android:text="Ajouter"
                android:id="@+id/Ajouter_Button_Ajout_competence"
                />
        </LinearLayout>
        <Button
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_margin="20dp"
            android:background="@drawable/button_burders"
            android:text="Consulter mon Cv"
            android:textAlignment="center"
            tools:ignore="RtlCompat"
            android:id="@+id/Consulter_Button_Ajout_competence"
            />
    </LinearLayout>
</FrameLayout>
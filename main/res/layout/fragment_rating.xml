<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_Fragments.Rating_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        >

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="233dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:numStars="5"
            android:stepSize="5"

            />
        <TextView
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="Ajouter un commentaire"
            android:layout_marginBottom="20dp"
            />


        <EditText
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:gravity="start"
            android:textSize="17dp"
            android:textAlignment="textStart"
            android:paddingStart="5dp"
            android:textColor="#000"
            android:background="@drawable/edittext_border"
            android:id="@+id/Comment_Edittext_rating"
            android:paddingLeft="5dp" />
        <TextView
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:textSize="17dp"
            android:textColor="#000"
            android:text="0/500"
            android:textAlignment="textEnd"
            tools:ignore="RtlCompat"
            android:id="@+id/NbrCaracteres_Text_rating"/>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">
            <Button
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_burders"
                android:backgroundTint="#C0C0C0"
                android:layout_marginRight="5dp"
                android:text="Annuler"
                android:id="@+id/Annuler_Button_rating"
                />
            <Button
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_burders"
                android:layout_marginLeft="5dp"
                android:text="Sauvegarder"
                android:id="@+id/Ajouter_Button_rating"
                />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>